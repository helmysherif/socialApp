<%- include("partials/header.ejs")  %> 
    <div class="container mt-5 pt-5">
        <div class="row">
            <div class="col-md-8 m-auto card p-5">
                <div class="">
                    <h3>Account Setting</h3>
                    <hr>
                    <form action="/handleSettings" method="POST">
                        <% if (usernameExists.length != 0) { %>
                            <div class = "alert alert-danger my-3 text-center">
                                <h6 class = "m-0 p-0">username doesn't exists</h6>
                            </div>
                        <% } %>
                        <% if (wrongPassword.length != 0) { %>
                            <div class = "alert alert-danger my-3 text-center">
                                <h6 class = "m-0 p-0">inncorrect password</h6>
                            </div>
                        <% } %>
                        <% if (wrongPassConfirm.length != 0) { %>
                            <div class = "alert alert-danger my-3 text-center">
                                <h6 class = "m-0 p-0">Password Confirmation are not matched</h6>
                            </div>
                        <% } %>
                        <input placeholder="Enter Old Username" type="text" class="form-control my-2" name = "oldUsername">
                        <input placeholder="Enter New Username" type="text" class="form-control my-2" name = "newUsername">
                        <input placeholder="Enter Old Password" type="password" class="form-control my-2" name = "oldPassword">
                        <input placeholder="New Password" type="password" class="form-control my-2" name = "newPassword">
                        <input placeholder="Repeat Password" type="password" class="form-control my-2" name = "rePassword">
                        <button class="btn btn-info mt-3">Save Setting</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include("partials/footer.ejs")  %> 
